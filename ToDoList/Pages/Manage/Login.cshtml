@page
@model ToDoList.Pages.Manage.LoginModel
@{
    ViewData["Title"] = "Login";

}


<section class="h-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px; background-color: #eee;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4" style="color:#ffbe33">@ViewData["Title"]</p>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <form id="registerForm" method="post">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="input.Email"></label>
                                            <input asp-for="input.Email" class="form-control" />
                                            <span asp-validation-for="input.Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="input.Password"></label>
                                            <input asp-for="input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                            <span asp-validation-for="input.Password" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn order_online btn-lg px-4">Log in</button>
                                    </div>

                                    <div class="form-check d-flex justify-content-start mb-5">
                                        <input class="form-check-input me-2" asp-for="input.RemmemberMe" />
                                        <label class="form-check-label" asp-for="input.RemmemberMe">
                                            Remember Me
                                        </label>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img class="img-fluid" src="~/images/mobile login-cuate.svg" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
   
}
