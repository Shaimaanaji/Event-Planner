@page
@model ToDoList.Pages.Manage.RegisterModel
@{
    ViewData["Title"] = "Sign up";

}


<style>
    .colorbase {
        color: #C53F3F !important;
    }
</style>

<section class="h-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px; background-color: #eee;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold  text-primary mb-5 mx-1 mx-md-4 mt-4">@ViewData["Title"]</p>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <form id="registerForm" method="post">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="input.FullName"></label>
                                            <input class="form-control" asp-for="input.FullName" />
                                            <span class="text-danger" asp-validation-for="input.FullName"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">

                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="input.Address"></label>
                                            <input class="form-control" asp-for="input.Address" />
                                            <span class="text-danger" asp-validation-for="input.Address"></span>

                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="input.Email"></label>
                                            <input class="form-control" asp-for="input.Email" />
                                            <span class="text-danger" asp-validation-for="input.Email"></span>

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="input.Password"></label>
                                            <input class="form-control" autocomplete="new-password" asp-for="input.Password" />
                                            <span class="text-danger" asp-validation-for="input.Password"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="input.ConfirmPassword"></label>
                                            <input class="form-control" autocomplete="new-password" asp-for="input.ConfirmPassword" />
                                            <span class="text-danger" asp-validation-for="input.ConfirmPassword"></span>
                                        </div>
                                    </div>

                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" asp-for="input.IAgree" />
                                        <label class="form-check-label">
                                            I agree all statements in <a href="#!">Terms of service</a>
                                        </label>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="~/img/Mobile login-amico.png" class="img-fluid" alt="Sample image" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
